<%= form_for(commentable.comments.build, remote: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="character-counter">
    <div class="reply-field" id="reply-field_#{commentable.id}">
      <%= f.text_area :body,
                       maxlength: 140,
                       id: "reply_text_field_#{commentable.id}",
                       placeholder: "Create a reply..." %>
      <%= f.hidden_field :commentable_id %>
      <%= f.hidden_field :commentable_type %>
    </div>
    <span class="countdown text-right">140 characters remaining</span>
  </div>
  <br>
  <%= f.submit "post a reply", class: "btn btn-submit" %>
<% end %>