<% provide(:title, 'Sign up') %>
<h1 class="center">Sign Up, and go...l o n g</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 user-signup">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <br>
      <%= f.label :username %>
      <%= f.text_field :username %>
      <br>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      <br>
      <br>
      <%= f.submit "Create my account", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>