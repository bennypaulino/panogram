<% provide( :title, 'Edit user' ) %>
<% provide( :button_text, 'Save changes' ) %>
<% provide( :form_url, user_path(@user) ) %>

<h1 class="center page-title">Update your profile</h1>

<div class="row">
  <div class="form-group col-md-6 col-md-offset-3">
    <br>
    <%= render 'form' %>

    <div class="gravatar_edit center">
      <span class="center-override"><%= gravatar_for @user %></span>
      <a class="change-gravatar" href="http://gravatar.com/emails" target="_blank" rel="noopener noreferrer">change</a>
      <!-- Minimize any security risks when opening a new tab/window by using rel="noopener noreferrer" -->
    </div>
  </div>
</div>
