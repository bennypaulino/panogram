<% provide( :title, 'Edit user' ) %>
<% provide( :button_text, 'Save changes' ) %>
<% provide( :form_url, edit_user_path(@user) ) %>

<h1 class="center">Update your profile</h1>

<div class="row">
  <div class="form-group col-md-6 col-md-offset-3">

    <%= render 'form' %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank" rel="noopener noreferrer">change</a>
      <!-- Minimize any security risks when opening a new tab/window by using rel="noopener noreferrer" -->
    </div>
  </div>
</div>
