<% provide(:title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>


<p>Account created on: <%= @user.created_at %></p>
<p>Account updated on: <%= @user.updated_at %></p>
<br>
<p>The time is now: <%= Time.now %></p>
