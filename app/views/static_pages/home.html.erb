<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3 class="pano-feed">Your Pano Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>

<% else %>

  <div class="center jumbotron">
    <h1 class="wide">Panogram</h1>
    <p>
      This is a provisional home page for P - A - N - O - g r a m , the REAL home page can be found under views/welcome/index.html.erb
    </p>

    <%= link_to "Sign up now!", '#', class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("logo_rough.svg", alt: "Panogram logo"), '/' %> 
<% end %>