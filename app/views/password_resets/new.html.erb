<% provide(:title, "Forgot password") %>
<div class="container" id="inner-wrapper">
  <div class="col-xs-12" id="layout-base">
    <h1 class="center page-title">Forgot your password?</h1>
    <br>
    <div class="form-group col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-12 col-sm-6 col-sm-offset-3">
      <%= form_for(:password_reset, url: password_resets_path) do |f| %>
        <%= f.label :email, class: 'control-label' %>
        <%= f.email_field :email, class: 'form-control' %>
        <br>

        <%= f.submit "Submit", class: "btn btn-submit" %>
      <% end %>
    </div>
  </div>
</div>