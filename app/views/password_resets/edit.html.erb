<% provide(:title, 'Reset password') %>
<div class="container" id="inner-wrapper">
  <div class="col-xs-12" id="layout-base">

    <h1 class="center page-title">Reset password</h1>
    <br>
    <div class="form-group col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-12 col-sm-6 col-sm-offset-3">
      <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= hidden_field_tag :email, @user.email %>

        <%= f.label :password, class: 'control-label' %>
        <%= f.password_field :password, class: 'form-control' %>
        <br>

        <%= f.label :password_confirmation, class: 'Confirmation control-label' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <br>

        <%= f.submit "Update password", class: "btn btn-submit" %>
      <% end %>
    </div>
  </div>
</div>