<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 
                            'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 
                            'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="Panogram, social, image, sharing, panoramic, photography, network, photos, images" /> 
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <div class="col-xs-12" id="outer-wrapper">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, 
                        class: "alert alert-#{message_type} 
                                alert-title 
                                alert-dismissible") do %>
          <%= message %>
          <button type="button" class="close" 
                  data-dismiss="alert" aria-label="Close">

            <span aria-hidden="true">&times;</span>

          </button>
        <% end %>
      <% end %>
      <%= yield %>
    </div>

    <footer class="footer">
      <nav>
        <span>
          Share your images on &nbsp
        </span>
        <%= link_to "Panogram", '/', class:'footer-stretch' %>
        <ul>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "Contact", contact_path %></li>
        </ul>
      </nav>
    </footer>
   <!--  <%= debug(params) if Rails.env.development? %>
     -->
  </body>
</html>
