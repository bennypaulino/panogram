<header class="navbar navbar-fixed-top navbar-inverse" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <button type="button" class="navbar-toggle collapsed" 
                          data-toggle="collapse" 
                          data-target="#menu-collapse" 
                          aria-expanded="false">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <div class="navbar-header">
      <%= link_to "Panogram", root_path, id: "logo" %>
    </div>
    
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div id="menu-collapse" class="navbar-collapse nav-collapse collapse" 
                            aria-expanded="false">

      <ul class="nav navbar-nav pull-right" id="nav-menu">
        <li>
          <%= link_to "Home", home_path, class: "navbar-links", 
                              'data-nav-section' => "home" %>
        </li>
        <li>
          <%= link_to "Help", help_path, class: "navbar-links" %>
        </li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path, class: "navbar-links" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                        role="button" aria-haspopup="true" 
                        aria-expanded="false">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
        <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </div> <!-- END OF NAVBAR MENUS -->
  </div> <!-- END OF NAVBAR CONTAINER -->
</header>