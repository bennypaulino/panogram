<% provide(:title, "Panogram") %>

<div class="container" id="inner-wrapper">
  <% if logged_in? %>
    <div class="col-xs-12" id="layout-base">
      <aside class="col-md-4 col-sm-4">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="col-md-8 col-sm-8" id="main-col">
        <h3 class="pano-feed">Your Pano Feed</h3>
        <%= render 'shared/feed' %>
      </div>
      <div class="pagination-wrapper center">
        <div class="pagination primary-font">
          <!-- The controller will determine how many posts/page --> 
          <%= will_paginate @feed_items, previous_label: "<", 
                                         next_label: ">",
                                         inner_window: 1, 
                                         outer_window: 0,
                                         :container => false %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="center jumbotron hero">
      <div class="frosty">
        <h1 class="hero-title center-block">Panogram</h1>
        <h2 class="sub-title center-block">
          Because the world isn't always square.
        </h2>
        <br>
        <%= link_to "Sign up now!", signup_path, 
                                    class: "btn btn-lg btn-submit" %>
      </div>
    </div>
  <% end %>
</div>