<!--   A form for DISliking using Ajax -->  
<span>
  <%= form_for(current_user.likes.find_by(micropost_id: micropost.id),
                html: { method: :delete }, 
                remote: true) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= image_submit_tag("heart_solid.png", 
                          class: 'heart', alt: 'click to dislike') %>
  <% end %>
</span>