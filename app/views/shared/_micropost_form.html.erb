<%= form_for(@micropost, html: { multipart: true }) do |f|%>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <br>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <br>
  <span class="picture">
    <%= f.file_field :picture %>
  </span>
<% end %>