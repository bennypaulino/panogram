<% provide(:title, "Log in") %>
<h1 class="page-title center">Log in</h1>

<br>

<div class="row">
  <div class="col-md-6 col-md-offset-3 form-group">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, class: 'control-label' %>
      <%= f.email_field :email, class: 'form-control' %>
      <br>
      <%= f.label :password, class: 'control-label' %>
      <%= link_to "(forgot password?)", new_password_reset_path, 
                                        class: 'primary-font', id: 'forgot-password' %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span class="primary-font">Remember me on this computer</span>
      <% end %>
      <br>
      <%= f.submit "Log in", class: "btn btn-submit" %>
    <% end %>
    <br>
    <p class="primary-font center new-user">New user? <%= link_to "Sign up now", signup_path, id: "signup-link" %>, and let's get this party started!</p>
  </div>
</div>
