<% provide(:title, "Log in") %>
<div class="container" id="inner-wrapper">
  <div class="col-xs-12" id="layout-base">
    <h1 class="page-title center">Log in</h1>

    <br>
    <div class="form-group col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-12 col-sm-6 col-sm-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email, class: 'control-label' %>
        <%= f.email_field :email, class: 'form-control' %>
        <br>
        <%= f.label :password, class: 'control-label' %>
        <%= link_to "(forgot password?)", new_password_reset_path, 
                                          class: 'primary-font', id: 'forgot-password' %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span class="primary-font">Remember me on this computer</span>
        <% end %>
        <br>
        <%= f.submit "Log in", class: "btn btn-submit" %>
      <% end %>
      <br>
      <p class="primary-font center new-user">
        New user? 
        <%= link_to "Sign up now", signup_path, id: "signup-link" %>, and let's get 
        <!-- <span class="whatever"> -->
          <%= link_to 'horizontal!', signup_path,
                      class: 'horizontal-tip',  
                      'data-toggle': 'tooltip', 
                      'data-placement': 'bottom',
                      title: 'Ummm...this site is best 
                              viewed in landscape mode :)' %>
          </a>
        <!-- </span> -->
      </p>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).on('turbolinks:load', function() {
    $(document.body).tooltip({ selector: "[title]" });
  })
</script>